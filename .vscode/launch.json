  "version": "0.2.0",
  "configurations": [
    {
      "name": "Godot Run",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build", // build task is defined in tasks.json under tasks.label
      "program": "${workspaceFolder}/dependencies/Godot.exe",
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "args": [
        "--path", "${workspaceRoot}",
      ],
    }

  ]
}